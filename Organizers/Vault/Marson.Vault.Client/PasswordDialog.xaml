<Window x:Class="Marson.Vault.Client.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" Height="157" Width="349" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Loaded="Grid_Loaded">
        <PasswordBox x:Name="passwordBox" Margin="10,41,10,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonOk" Content="OK" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" IsDefault="True" Click="buttonOk_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" Margin="0,0,10,10" RenderTransformOrigin="1.013,1.091" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" IsCancel="True" Click="buttonCancel_Click"/>

    </Grid>
</Window>
